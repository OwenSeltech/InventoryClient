@model InventoryClient.Models.CustomerRequestModel
@using InventoryClient.Extensions;

<form asp-controller="Customers" asp-action="_AddCustomer" data-ajax="true" data-ajax-method="POST">
    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Customer</h5>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row">
                            <div id="dvMessage" style="display:none" class="alert alert-danger">
                                <span id="MsgOut">@ViewBag.Message</span>
                            </div>
                            <br />
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="floating-label" for="Name">First Name</label>
                                        @Html.TextBoxFor(m => m.CustomerFirstName, new { @class = "form-control" })
                                        <span class="field-validation-valid" data-valmsg-for="CustomerFirstName" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="row">
                                        <label class="floating-label" for="Name">Last Name</label>
                                        @Html.TextBoxFor(m => m.CustomerLastName, new { @class = "form-control" })
                                        <span class="field-validation-valid" data-valmsg-for="CustomerLastName" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="row">
                                        <label class="floating-label" for="Name">Address</label>
                                        @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control" })
                                        <span class="field-validation-valid" data-valmsg-for="CustomerAddress" data-valmsg-replace="true"></span>
                                    </div>
                                    <div class="row">
                                        <label class="floating-label" for="Name">Email Address</label>
                                        @Html.EmailInputFor(m => m.CustomerEmailAddress, "form-control")
                                        <span class="field-validation-valid" data-valmsg-for="CustomerEmailAddress" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@if (@ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            $("#dvMessage").show();
        });
    </script>
}

